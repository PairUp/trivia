#!/usr/bin/env ruby
$:.unshift(File.dirname(__FILE__) + '/../lib')

if '--testmode' == ARGV.first
  srand ARGV[1].to_i
end

require 'ugly_trivia/game'

game = UglyTrivia::Game.new

game.add 'Chet'
game.add 'Pat'
game.add 'Sue'

not_a_winner = true
while not_a_winner
  game.roll(rand(5) + 1)
  not_a_winner = game.did_fictional_user_answer_correctly?
end
